<?xml version="1.0"?>
<ivysettings>

    <!-- -->
    <properties file="${common.dir}/ivysettings.properties"/>
    
    <!-- -->
	<settings defaultResolver="default"/>
	<resolvers>
		<filesystem name="main" checkmodified="true">
			<ivy pattern="${main.jar.dir}/${jar.pattern}"/>
			<artifact pattern="${main.jar.dir}/${jar.pattern}"/>
		</filesystem>
		
		<filesystem name="test" checkmodified="true">
			<ivy pattern="${test.jar.dir}/${jar.pattern}"/>
			<artifact pattern="${test.jar.dir}/${jar.pattern}"/>
		</filesystem>
		
		<chain name="default" checkmodified="true">
            <resolver ref="main"/>
            <resolver ref="test"/>
		</chain>
	</resolvers>
</ivysettings>
